<%- include('navbar') %>
    <div class="container">
        <h2>用户修改</h2>
        <form id="editUserForm" action="/users/update" method="post">
            <input type="hidden" name="id" id="editUserId" value="<%= user[0].id %>" />
            <div class="form-group">
                <label for="editUserName">用户名</label>
                <input type="text" class="form-control" id="editUserName" name="username" value="<%= user[0].username%>"
                    required />
            </div>
            <div class="form-group">
                <label for="editUserPhone">密码</label>
                <input type="text" class="form-control" id="editUserPhone" name="password"
                    value="<%= user[0].password%>" required />
            </div>
            <div class="btns">
                <input class="btn btn-add" type="submit" value="确定" />
                <a class="btn btn-return" href="/users">返回</a>
            </div>
    </div>
    </body>

    </html>