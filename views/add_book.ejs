<%- include('navbar') %>
    <div class="container">
        <h2>添加图书</h2>
        <form id="editUserForm" action="/books/add" method="post">
            <div class="form-group">
                <label for="editUserName">图书名称</label>
                <input type="text" class="form-control" id="editUserName" name="title" required />
            </div>
            <div class="form-group">
                <label for="editUserPhone">作者名</label>
                <input type="text" class="form-control" id="editUserPhone" name="author" required />
            </div>
            <div class="form-group">
                <label for="editUserPhone">出版社名称</label>
                <input type="text" class="form-control" id="editUserPhone" name="publisher" required />
            </div>
            <div class="btns">
                <input class="btn btn-add" type="submit" value="确定" />
                <a class="btn btn-return" href="/books">返回</a>
            </div>
        </form>
    </div>
    </body>

    </html>